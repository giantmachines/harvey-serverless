service:
  name: harvey-redux

# Add the serverless-webpack plugin
plugins:
  - serverless-webpack

provider:
  name: aws
  runtime: nodejs8.10
  environment:
    HARVEST_ACCOUNT_ID: harvestAccountId
    HARVEST_AUTHORIZATION_TOKEN: harvestAuthorizationToken
    SLACK_WEBHOOK_URL: slackWebhookUrl

functions:
  hello:
    handler: src/handler.hello
    events:
      - http:
          method: get
          path: hello
